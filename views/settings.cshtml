<div id="configure-page-content" class="margin-20">
    <p id="tab-help-message"><strong>»</strong> Maintain Checklist items for templates</p>

    <div class="margin-bottom-20">@Html.DropDownList("Template", Model.Templates, new { @class = "input-size9" })</div>
 
